{
  "manifest_version": 2,

  "name": "background-colorpeek",
  "version": "1.0",
  "description": "Get every background-color from the current tab.",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts" : [
    {
      "matches": ["*://*/*"],
      "js": ["trial.js"]
    }
  ],

  "permissions": ["<all_urls>"]
}
